@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h4>Edit details for @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new { required="required"})
  <br>
  @Html.LabelFor(model => model.Status)
  @Html.DropDownList("Status")
  <br>
  <input type="submit" value="Save" />
}
<br>
<p>@Html.ActionLink($"Return to Details for {Model.Name}", "Details", new { id = Model.MachineId} )</p>
<p>@Html.ActionLink("Return to List of Machines", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>