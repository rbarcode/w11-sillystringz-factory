@{
  Layout = "_Layout";
}

@model Factory.Models.Machine
@using Factory.Models

<h2>Add an engineer that is licensed to repair @Html.DisplayFor(model => model.Name)</h2>

@if (@ViewBag.Engineers.Count == 0)
{
  <p>You must add at least one engineer to the system first.</p>
  <p>@Html.ActionLink("Add Engineer", "Create", "Engineers")</p>
}
else
{
  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.MachineId)

    @Html.Label("Select an engineer:")
    @Html.DropDownList("EngineerId")
    <br>
    <input type="submit" value="Save" />
  }
}
<br>
<p>@Html.ActionLink($"Return to Details for {Model.Name}", "Details", new { id = Model.MachineId} )</p>
<p>@Html.ActionLink("Return to List of Machines", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>