@{
  Layout = "_Layout";
}

@using Factory.Models;

<h1>Engineers</h1>

<hr />

@if (@Model.Count == 0)
{
  <h3>No engineers have been added.</h3>
}

<ul>
  @foreach(Engineer engineer in Model)
  {
    string FullName = @engineer.LastName + ", " + @engineer.FirstName;
    <li>@Html.ActionLink(FullName, "Details", "Engineers")</li>
  }
</ul>

<p>@Html.ActionLink("Add Engineer", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>