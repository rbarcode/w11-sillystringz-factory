@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer
@using Factory.Models

<h2>Assign a machine for @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName) to repair</h2>

@if (@Model.JoinEntitiesLicensure.Count == 0)
{
  <p>You must license @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName) to repair at least one machine first.</p>
  <p>@Html.ActionLink("Add Licensure", "AddMachine", new { id = Model.EngineerId} )</p>
}
else
{
  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.EngineerId)

    @Html.Label("Select a machine:")
    @Html.DropDownList("MachineId")
    <br>
    <input type="submit" value="Save" />
  }
}
<br>
<p>@Html.ActionLink($"Return to Details for {Model.FirstName} {Model.LastName}", "Details", new { id = Model.EngineerId} )</p>
<p>@Html.ActionLink("Return to List of Engineers", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>